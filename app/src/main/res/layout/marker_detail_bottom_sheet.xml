<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wasteLocationDetailBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wasteImageView"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/remarksTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressTextView"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remarksTextView"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/requesterNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusTextView"
        android:layout_weight="3"/>

    <ImageView
        android:id="@+id/wasteImageView"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_weight="7" />

    <Button
        android:id="@+id/reserveCollectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Button"
        android:background="#000"
        android:textColor="#fff"
        android:layout_below="@id/requesterNameTextView"/>

    <ProgressBar
        android:id="@+id/reserveRequestProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="124dp"
        android:layout_height="117dp"
        android:layout_centerInParent="true"
        android:layout_weight="4"
        android:layout_gravity="top"
        android:visibility="invisible"/>
</RelativeLayout>

</LinearLayout>