<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wasteLocationDetailBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:padding="16dp"
    android:parentActivityName="MapsActivity"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/darker_gray"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/wasteImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@android:color/background_light" />

    <TextView
        android:id="@+id/wasteCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:text="Category"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/wasteRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:text="Remarks"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/wasteStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:text="Status"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/wasteRequester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:text="Created By"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/wasteBottomSheetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="Button"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

</LinearLayout>