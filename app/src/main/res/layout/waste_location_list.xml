<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/requestId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/geopointsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
        <TextView
            android:id="@+id/geopoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geopointsText"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/waste_image"
            android:layout_toLeftOf="@+id/status" />


            <TextView
                android:id="@+id/categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/geopoints"
                android:layout_marginTop="5dip"
                android:text="Category"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryText"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/waste_image"
            android:layout_toLeftOf="@+id/status"/>

            <TextView
                android:id="@+id/remarksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:layout_marginTop="5dip"
                android:text="Remarks"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
        <TextView
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remarksText"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/waste_image"
            android:layout_toLeftOf="@+id/status" />

            <TextView
                android:id="@+id/submitDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remarks"
                android:layout_marginTop="5dip"
                android:text="SubmitDate"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
            <TextView
                android:id="@+id/submitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/submitDateText"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status" />

            <TextView
                android:id="@+id/requesterUidText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/submitDate"
                android:layout_marginTop="5dip"
                android:text="Rquester"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
            <TextView
                android:id="@+id/requesterUid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requesterUidText"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status" />

    <!--        <TextView
                android:id="@+id/collectorUidText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/requesterUid"
                android:layout_marginTop="5dip"
                android:text="Collector"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
            <TextView
                android:id="@+id/collectorUid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collectorUidText"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status" />


            <TextView
                android:id="@+id/collectDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collectorUid"
                android:layout_marginTop="5dip"
                android:text="Collector"
                android:textColor="#9E9E9E"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status"
                />
            <TextView
                android:id="@+id/collectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/collectDateText"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/waste_image"
                android:layout_toLeftOf="@+id/status" />
-->

            <Button
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/appColor"
                android:text="Button" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/waste_image"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:src="@mipmap/wastegone_icon_round" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout >
